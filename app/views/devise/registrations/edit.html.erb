<div class="myaccount">
<div id="content">





	<div class="panel" id="account">
	  <h2 class="panel-header"><%= @user.email %></h2>
	  <div class="panel-body">
		<% unless @user.errors.full_messages.empty? %>
	    <div class="billing-info part">
	      <h3 style="color:red">Please Rectify</h3>
	      <p><%i=1 %>
  				<% @user.errors.full_messages.each do |msg| %>
						<%= i %>. <%= msg %><br>
						<%i+=1  %>
					<%end  %>
	      </p>
	    </div>
		<% end %>

			<%= form_for @user do |f| %>
	      <fieldset>
	        <h3>Personal Information</h3>
	        <div class="field">
          	<label for="user_name">Name</label>
				  	<%= f.text_field :name, class:"text password"  %>						
	        </div>
	        <div class="field">
          	<label for="user_website">Website/Blog</label>
				  	<%= f.text_field :website, class:"text password"  %>						
	        </div>
	        <div class="field">
          	<label for="user_location">Location</label>
				  	<%= f.text_field :location, class:"text password"  %>						
	        </div>
	        <div class="field">
          	<label for="user_location">Signature</label>
				  	<%= f.text_area :signature, class:"text password", style:'height:50px'  %>
	        </div>
	        <p class="submit"><input type="submit" value="Save" name="commit" class="submit"></p>
	      </fieldset>
				<% end %>
				
			

			<%= form_for(@user, :as => :user, :url => registration_path(:user), :html => { :method => :put }) do |f| %>

	      <fieldset>
	        <h3>Change Password</h3>


	        <div class="field">
					  <label>Current Password</label>
					  <%= f.password_field :current_password, class:"text password" %>
	        </div>	
	        <div class="field">
				  	<label>New Password</label>
			  		<%= f.password_field :password, class:"text password"  %>
	        </div>
	        <div class="field">
					  <label>Confirm New Password</label>
					  <%= f.password_field :password_confirmation, class:"text password"  %>
	        </div>

	        <p class="submit"><input type="submit" value="Change Password" name="commit" class="submit"></p>
	      </fieldset>
			<% end %>


			<%= form_for(@user, :as => :user, :url => registration_path(:user), :html => { :method => :put }) do |f| %>
	      <fieldset>
	        <h3>Danger Zone</h3>
	        <div class="field">
	          	Unhappy? <%= link_to "Cancel my account", registration_path(:user), :confirm => "Are you sure?", :method => :delete %>.
	        </div>
	      </fieldset>
				<% end %>


	  </div>
	</div>
	
	


</div>
</div>





