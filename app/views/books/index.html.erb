				          </label>
				          <input type="text" class="text" id="livesearch">
        </div>
	     </fieldset>
    </form>

<% @books.each do |book| %>      
        <div class="user_app part" onclick="window.location.href='<%= j book_path(book) %>'">
          <a class="resources" href="<%= book_path(book) %>">
            <span class="database"></span>
          </a>
          <div class="app_name">
            <h3><%= link_to book.title,book %></h3>
          </div>
          <ul class="submenu">

						<li><a href="#" onclick="event.stopPropagation()"><%= book.problems.count %> Problems</a></li>
						<li><a href="#" onclick="event.stopPropagation()"><%= book.theorems.count %> Theorems</a></li>
            <li><a href="#" onclick="event.stopPropagation()"><%= book.definitions.count %> Definitions</a></li>

						<li></li>
          </ul>
          <div class="clear"></div>
        </div>
<%end %>      

